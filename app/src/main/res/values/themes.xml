<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme -->
    <style name="Theme.DirectCan.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/surface_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.DirectCan</item>
    </style>

    <!-- Base application theme for Compose -->
    <style name="Theme.DirectCan" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowBackground">@color/surface_dark</item>
    </style>
</resources>
